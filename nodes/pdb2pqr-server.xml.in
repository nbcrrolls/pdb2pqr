<?xml version="1.0" standalone="no"?>

<kickstart>

        <description>
        PDB2PQR
        </description>

        <copyright>
        </copyright>

        <changelog>

        </changelog>

        <package>roll-pdb2pqr-usersguide</package>

<post>

if [ -e /var/www/html/pdb2pqr ] ; then
   rm -rf /var/www/html/pdb2pqr
fi

ln -s /opt/pdb2pqr_PDB2PQRVER /var/www/html/pdb2pqr

if [ ! -d /var/tmp/pdb2pqr/tmp ]; then
    mkdir -p /var/tmp/pdb2pqr/tmp
    chmod 777 /var/tmp/pdb2pqr/tmp
fi

tempname="rollhost"
realname=&Kickstart_PublicHostname;
change_list=`grep -r -l $tempname /opt/pdb2pqr_PDB2PQRVER`

for i in $change_list; do \
  sed -i "s/$tempname/$realname/g" $i; \
done


</post>
</kickstart>

